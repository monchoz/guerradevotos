@import 'nib'
@import 'nib/gradients'

span
	color white
	font 2em 'Myriad Pro'

.btn-duel
	font 2em 'Myriad Pro'
	margin 15px 20px 0 0

.btn-duel-participate
	font-size 2em
	height 60px
	width 150px


.challenging-name
	color #1c82ba
	font-family 'Crete Round' serif
	font-size 2em
	margin-top 1em

.challenging-title
	color #1c82ba
	font-size 1.5em
	font-family 'Arial Rounded MT Bold' bold
	margin-top 10px

.challenging-picture
	border 5px solid white
	border-radius 50%
	background-size 300px 300px
	height 150px
	transition transform 0.3s ease
	transform scale(0.8)
	width 150px

	&:hover
		transform scale(1)
  
.challenging-stats
	margin-bottom 1em
	padding 10px


.challenging-score
	color #1c82ba
	font-size 5em
	font-family 'Arial Rounded MT Bold' bold

.challenging-score-separator
	color #b7b6b6
	font-size 5em
	font-family 'Arial'
	margin 0 10%

.todays-duel-image
	text-align center

.duel
	border 1px solid #b7b6b6
	box-shadow #353434 3px 3px 2px
	margin 25px auto 5px 10%
	width 400px

.duels-row-top
	background #6eceb4
	height 13em
	padding-top 1em

.duels-row-bottom
	display inline-block
	float left
	padding-top 1em

.duel-image
	height 60px
	width 60px

.dropdown-menu
	font-size 20px

.main-nav
	background-color #fa6900 !important
	height 90px

.navbar-nav>.open>a:focus
	background-color transparent !important

.navbar-brand
	background-color black
	border-top-right-radius 100px
	height 90px
	width 30%
	&:hover
		background-color black !important

.profile-dropdown
	background-color transparent !important	
	margin -10px 20px

.profile-image
	border 2px solid white
	border-radius 500px
	height 80px
	width 80px
	overflow hidden

.social-section
	display inline-block
	width 360px
	margin-bottom 10px

.social-shares
	float left
	margin-top 1em

.social-button
	display inline-block
	float right



@import app-responsive






	  